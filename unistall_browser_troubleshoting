#  Define the folder path ğŸ› ï¸ (replace UserName with yours) ğŸ› ï¸
$folderPath = "C:\Users\UserName\AppData\Local\Programs\Opera" 

# âš™ï¸â”Check if the folder exists 
if (Test-Path $folderPath) {
    #Attempt to delete the folder its contents
    Remove-Item -Path $folderPath -Recurce -Force
    Write-Host "The folder has been successfully deleted. âœ…" -ForegroundColor Green
} else {
    Write-Host "The folder does not exist." -ForegroundColor Cyan
}

# ğŸ“‹ List all tasks to identify the auto-update tasks ğŸ› ï¸ (replace 'Taksname' with name of your browser)ğŸ› ï¸
Get-ScheduledTask | Where-Object {$_.Taskname -like "*Update*"}

# âŒ Delete a specific auto-update task ğŸ› ï¸ (replace 'TaskName' with the name of your browser)ğŸ› ï¸
Unregister-ScheduledTask -TaskName "TaskName" -Confirm:$false

# Alternatively, âŒ delete all tasks containing "Update" in their name ğŸ› ï¸ (replace 'TaskName' with the name of your browser)ğŸ› ï¸
Get-ScheduledTask | Where-Object {$_.TaskName -like "*Update*"} | ForEach-Object {
    Unregister-ScheduledTask -TaskName $_.TaskName -Confirm:$false
}

